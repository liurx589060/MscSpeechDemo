<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <Button
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="选择语音"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_merge"
        android:layout_alignStart="@+id/btn_merge" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:inputType="textPersonName"
        android:hint="请输入需要合成语音的文字"/>

    <Button
        android:id="@+id/btn_merge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="合成语音" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="暂停"
        android:layout_below="@+id/btn_merge"
        android:layout_alignRight="@+id/btn_merge"
        android:layout_alignEnd="@+id/btn_merge"
        android:layout_alignLeft="@+id/btn_merge"
        android:layout_alignStart="@+id/btn_merge" />

    <Button
        android:id="@+id/btn_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="继续"
        android:layout_below="@+id/btn_pause"
        android:layout_alignLeft="@+id/btn_pause"
        android:layout_alignStart="@+id/btn_pause"
        android:layout_alignRight="@+id/btn_pause"
        android:layout_alignEnd="@+id/btn_pause" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="停止"
        android:layout_below="@+id/btn_resume"
        android:layout_alignLeft="@+id/btn_resume"
        android:layout_alignStart="@+id/btn_resume"
        android:layout_alignRight="@+id/btn_resume"
        android:layout_alignEnd="@+id/btn_resume" />
</RelativeLayout>
